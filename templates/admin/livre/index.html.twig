{% extends 'base.html.twig' %}

{% block title %}Livre index{% endblock %}

{% block body %}
<h1 class="mt-4">Dashboard</h1><a href="{{ path('livre_new') }}" class="btn btn-primary">Nouveau livre</a>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Liste des livres</li>
</ol>
<div class="row">
    <div class="container">
        <div class="table-responsive">
            {% for message in app.flashes('notice') %}
                <div class="alert alert-success" role="alert">
                    {{ message }}
                </div>
            {% endfor %}

            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Titre</th>
                        <th>Description</th>
                        <th>Auteur</th>
                        <th>DateParution</th>
                        <th>Disponibility</th>
                        <th>nbre</th>

                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for livre in livres %}
                    <tr>
                        <td>{{ livre.id }}</td>
                        <td>{{ livre.titre }}</td>
                        <td>{{ livre.description }}</td>
                        <td>{{ livre.auteur }}</td>
                        <td>{{ livre.dateParution ? livre.dateParution|date('Y-m-d') : '' }}</td>
                        <td>{{ livre.disponibility ? 'Yes' : 'No' }}</td>
                        <td>{{ livre.nbre }}</td>
                        <td>
                            <a href="{{ path('livre_show', {'id': livre.id}) }}" class="btn-primary btn btn-sm"><i class="fa fa-eye"></i></a>
                            <a href="{{ path('livre_edit', {'id': livre.id}) }}" class="btn-secondary btn btn-sm"><i class="fa fa-edit"></i></a>

                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="10">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>





{% endblock %}
